<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), class: "ui form", html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="ui hidden divider"></div>

    <div class="ui icon input">
    <%= f.input :email, required: true, autofocus: true %>
    <i class="user icon"></i>
  </div>

<div class="ui hidden divider"></div>

  <%= f.button :submit, "Send me reset password instructions", class: "ui submit button" %>
<% end %>

<%= render "devise/shared/links" %>
