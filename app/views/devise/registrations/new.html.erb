<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "ui form"}) do |f| %>
  <%= f.error_notification %>
  <div class="two fields">
    <div class="ui icon input">
      <%= f.input :email, required: true, autofocus: true %>
      <i class="user icon"></i>
    </div>
    <div class="field"></div>
  </div>

  <div class="ui icon input">
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="ui hidden divider"></div>


  <%= f.button :submit, "Sign up", class: "ui submit button" %>

<% end %>

<%= render "devise/shared/links" %>
