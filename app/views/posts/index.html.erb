<h1>CAS</h1>
<p>College Announcement System</p>

<hr>
<% @posts.each do |p| %>
  <h2>[<%= Lecture.find(p.lecture_id).name %>] <%= p.title %></h2>
  <p> Published at <%= p.created_at.strftime('%b %d, %Y') %></p>
  <p>>> <%= p.content %> <p>

<% end %>

<% if user_signed_in? %>
  <%= link_to "New Announcement", new_post_path %>
<% end %>
